{
    "files.associations": {
        "iostream": "cpp",
        "ostream": "cpp",
        "deque": "cpp",
        "string": "cpp",
        "vector": "cpp"
    },

    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "github.copilot.inlineSuggest.enable": false,
    "github.copilot.editor.enableAutoCompletions": false,
    "github.copilot.chat.enabled": false,
